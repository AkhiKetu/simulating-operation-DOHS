<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500" prefWidth="600" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="spring.simulatingoperationdohs.controllers.ComplaintsFeedbackViewController">

    <Label layoutX="20" layoutY="20" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Complaints Feedback Form" />

    <Label layoutX="20" layoutY="70" text="Issue Type:" />
    <ComboBox fx:id="issueTypeComboBox" layoutX="150" layoutY="65" prefWidth="300" />

    <Label layoutX="20" layoutY="120" text="Details:" />
    <TextArea fx:id="detailsTextField" layoutX="150" layoutY="115" prefHeight="100" prefWidth="400" wrapText="true" />

    <Label layoutX="20" layoutY="230" text="Urgency:" />
    <ChoiceBox fx:id="urgencyComboBox" layoutX="150" layoutY="225" prefWidth="150" />

    <Label layoutX="20" layoutY="280" text="Attachments:" />
    <Button layoutX="150" layoutY="275" onAction="#attachmentsAddButton" text="ADD" />

    <Button layoutX="150.0" layoutY="324.0" onAction="#submitComplaintButton" prefHeight="51.0" prefWidth="185.0" style="-fx-text-fill: black;" text="Submit Complaint" />
   <Button layoutX="477.0" layoutY="404.0" mnemonicParsing="false" onAction="#dashboardButton" prefHeight="51.0" prefWidth="74.0" text="Dashboard" />

</AnchorPane>
